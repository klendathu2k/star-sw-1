
if ( ! -f StRoot ) then

#  Create symbolic links to everything
   ln -s star-sw-1/* .

#  Adjust StRoot
   rm StRoot
   mkdir StRoot/StarGenerator -p 

   echo "There should be one and only one error reported for failing to link the existing StarGenerator directory..."
   cd StRoot/
   ln -s ../star-sw-1/StRoot/* .
   cd - 

   cd StRoot/StarGenerator
   ln -s ../../star-mcgen/StRoot/StarGenerator/* .
   ln -s ../../star-sw-1/StRoot/StarGenerator/* .
   cd -

endif



